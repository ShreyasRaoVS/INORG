model CompanyBanner {
  id          String   @id @default(uuid())
  title       String
  content     String
  type        String   @default("info")
  isActive    Boolean  @default(true)
  startDate   DateTime @default(now())
  endDate     DateTime?
  priority    Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("company_banners")
}
