model Department {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  color       String?
  managerId   String?
  budget      Float?
  
  users    User[]
  projects Project[]
  teams    Team[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("departments")
}
