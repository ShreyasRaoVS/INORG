model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      NotificationType
  read      Boolean @default(false)
  userId    String
  link      String?
  metadata  Json?

  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("notifications")
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  TASK_ASSIGNED
  TASK_UPDATED
  COMMENT_ADDED
  PROJECT_UPDATED
}
